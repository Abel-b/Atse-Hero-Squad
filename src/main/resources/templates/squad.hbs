{{#partial "content"}}
        <div class="squad">
            <a class="btn btn-warning" href="/squad-form">Create Your Squad</a>
            <div id="newMember">
                <h2>Choose Squad Members</h2>
                <div class="row">
                    {{#each heroes}}
                <div class="col-md-6">
                    <div class="card">
                        <img src="/images/hero3.jpeg" alt="Avatar" >
                        <div class="container">
                            <h3>Name: {{heroName}}</h3>
                            <p>Super power: {{ superPower }}</p>
                            <a class="btn btn-primary" href="/squad/new/{{id}}">Add To Squad</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</div>
        <h2>
            <br><br>
            {{#if squads}}
                AVAILABLE SQUADS
            </h2>
                {{#each squads}}
                    <div class="squad-cont">
                        <img src="/images/hero2.jpeg" alt="">
                        <div>
                            <h1>{{ squadName }} </h1>
                            <p>Id: {{squadId}}</p>
                            <p>Max participants: {{ maxSize }}</p>
                            <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>

                            <br><br>
                            {{#each squadMembers}}
                                <div class="member-cont">
                                    <h5>Name: {{this.squadName}}</h5>
                                    <h5>Power: {{superPower}}</h5>
                                    <Button class="btns">Remove</Button>
                                </div>
                            {{/each}}


                        </div>
                    </div>
                {{/each}}
            {{else}}
                <h2>Please create a squad to continue</h2>
            {{/if}}
        </div>

{{/partial}}
{{> layout.hbs}}